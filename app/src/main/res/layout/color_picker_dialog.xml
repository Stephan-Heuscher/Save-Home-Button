<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Large Color Preview -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:elevation="4dp">

        <View
            android:id="@+id/color_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black" />
    </androidx.cardview.widget.CardView>

    <!-- Color Type (Hue) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/color_type"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/hue_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="360"
        android:minHeight="48dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/color_type" />

    <!-- Color Intensity (Saturation) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/color_intensity"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/saturation_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="100"
        android:minHeight="48dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/color_intensity" />

    <!-- Brightness -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/color_brightness"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/brightness_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="100"
        android:minHeight="48dp"
        android:contentDescription="@string/color_brightness" />
</LinearLayout>
