<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Large Color Preview -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <View
            android:id="@+id/color_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black" />
    </androidx.cardview.widget.CardView>

    <!-- Color Type (Hue) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/color_type"
            android:textSize="16sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/hue_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0Â°"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/hue_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="360"
        android:minHeight="48dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/color_type" />

    <!-- Color Intensity (Saturation) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/color_intensity"
            android:textSize="16sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/saturation_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/saturation_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="100"
        android:minHeight="48dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/color_intensity" />

    <!-- Brightness -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/color_brightness"
            android:textSize="16sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/brightness_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/brightness_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="100"
        android:minHeight="48dp"
        android:contentDescription="@string/color_brightness" />
</LinearLayout>
