<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingTop="16dp"
    android:paddingBottom="20dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="←"
                android:textSize="24sp"
                android:textColor="?android:attr/textColorPrimary"
                android:contentDescription="@string/back"
                style="?android:attr/borderlessButtonStyle"
                android:padding="0dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Section: Tap Behavior -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_behavior"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp"
                    android:importantForAccessibility="yes" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_behavior_desc"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="16dp" />

                <RadioGroup
                    android:id="@+id/tap_behavior_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/tap_behavior_safe_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tap_behavior_safe_home"
                        android:textSize="18sp"
                        android:checked="true"
                        android:minHeight="48dp"
                        android:paddingVertical="8dp" />

                    <RadioButton
                        android:id="@+id/tap_behavior_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tap_behavior_back"
                        android:textSize="18sp"
                        android:minHeight="48dp"
                        android:paddingVertical="8dp" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section: Color -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="16dp"
                    android:importantForAccessibility="yes" />

                <!-- First row of colors -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/color_blue"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="#2196F3"
                        android:contentDescription="@string/color_blue"
                        android:minHeight="64dp"
                        android:text="" />

                    <Button
                        android:id="@+id/color_red"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="#F44336"
                        android:contentDescription="@string/color_red"
                        android:minHeight="64dp"
                        android:text="" />

                    <Button
                        android:id="@+id/color_green"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="#4CAF50"
                        android:contentDescription="@string/color_green"
                        android:minHeight="64dp"
                        android:text="" />

                    <Button
                        android:id="@+id/color_orange"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="#FF9800"
                        android:contentDescription="@string/color_orange"
                        android:minHeight="64dp"
                        android:text="" />
                </LinearLayout>

                <!-- Second row of colors -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/color_purple"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="#9C27B0"
                        android:contentDescription="@string/color_purple"
                        android:minHeight="64dp"
                        android:text="" />

                    <Button
                        android:id="@+id/color_cyan"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="#00BCD4"
                        android:contentDescription="@string/color_cyan"
                        android:minHeight="64dp"
                        android:text="" />

                    <Button
                        android:id="@+id/color_yellow"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="#FFEB3B"
                        android:contentDescription="@string/color_yellow"
                        android:minHeight="64dp"
                        android:text="" />

                    <Button
                        android:id="@+id/color_gray"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="#607D8B"
                        android:contentDescription="@string/color_gray"
                        android:minHeight="64dp"
                        android:text="" />
                </LinearLayout>

                <!-- Custom Color Button -->
                <Button
                    android:id="@+id/color_custom"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="@string/custom_color"
                    android:textSize="18sp"
                    android:contentDescription="@string/choose_custom_color_desc"
                    android:minHeight="64dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section: Keyboard -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Keyboard Avoidance -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/keyboard_avoidance"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="4dp"
                    android:importantForAccessibility="yes" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/keyboard_avoidance_desc"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="8dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/keyboard_avoidance_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/avoid_keyboard"
                    android:textSize="16sp"
                    android:checked="false"
                    android:minHeight="48dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section: Advanced Settings (Collapsible) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/advanced_toggle_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="64dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/for_experts"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:importantForAccessibility="yes" />

                <TextView
                    android:id="@+id/advanced_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▼"
                    android:textSize="20sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:contentDescription="@string/for_experts" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Advanced Settings Content (Collapsible) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/advanced_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:contentPadding="20dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Transparency -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transparency"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="4dp"
                    android:importantForAccessibility="yes" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/how_transparent_the_point_is"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:layout_marginBottom="24dp">

                    <SeekBar
                        android:id="@+id/alpha_seekbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="255"
                        android:progress="255"
                        android:contentDescription="@string/transparency_desc"
                        android:minHeight="48dp" />

                    <TextView
                        android:id="@+id/alpha_value_text"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textSize="18sp"
                        android:textAlignment="textEnd"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginStart="16dp"
                        android:importantForAccessibility="yes" />
                </LinearLayout>

                <!-- Switch Speed -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/switch_speed"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="4dp"
                    android:importantForAccessibility="yes" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wait_time_for_app_switch"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="48dp">

                    <SeekBar
                        android:id="@+id/timeout_seekbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:min="50"
                        android:max="300"
                        android:progress="100"
                        android:contentDescription="@string/switch_speed_desc"
                        android:minHeight="48dp" />

                    <TextView
                        android:id="@+id/timeout_value_text"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="100 ms"
                        android:textSize="18sp"
                        android:textAlignment="textEnd"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginStart="16dp"
                        android:importantForAccessibility="yes" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Impressum Button -->
        <Button
            android:id="@+id/impressum_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/impressum_title"
            android:textSize="18sp"
            android:contentDescription="@string/impressum_title"
            android:minHeight="64dp"
            android:layout_marginTop="16dp"
            android:paddingVertical="16dp" />

    </LinearLayout>
</ScrollView>
