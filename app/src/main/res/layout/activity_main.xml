<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingTop="32dp"
    android:paddingBottom="24dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Header with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="@string/assistipoint_app"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_icon_background"
                android:clipToOutline="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_title"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_subtitle"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Permissions Section -->
        <LinearLayout
            android:id="@+id/permissions_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/overlay_permission_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/overlay_status_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="①"
                            android:textSize="32sp"
                            android:textColor="#E65100"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/show_assistipoint"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="#E65100" />

                            <TextView
                                android:id="@+id/overlay_status_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/shows_assistipoint_over_apps"
                                android:textSize="13sp"
                                android:textColor="#BF360C"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/overlay_permission_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/allow"
                        android:textSize="16sp"
                        android:contentDescription="@string/allow_assistipoint_over_apps"
                        android:minHeight="52dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/accessibility_permission_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/accessibility_status_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="②"
                            android:textSize="32sp"
                            android:textColor="#E65100"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/allow_navigation"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="#E65100" />

                            <TextView
                                android:id="@+id/accessibility_status_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/for_back_home_app_switch"
                                android:textSize="13sp"
                                android:textColor="#BF360C"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/accessibility_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/allow"
                        android:textSize="16sp"
                        android:contentDescription="@string/allow_navigation_desc"
                        android:minHeight="52dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Main On/Off Switch - Primary Action -->
        <androidx.cardview.widget.CardView
            android:id="@+id/main_switch_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:minHeight="80dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/assistipoint_on_off"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:id="@+id/switch_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shows_the_assistipoint"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/overlay_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/switch_assistipoint_on_off"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:scaleX="1.3"
                    android:scaleY="1.3" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Settings Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="17sp"
            android:contentDescription="@string/adjust_color_and_speed"
            android:minHeight="56dp"
            android:layout_marginBottom="20dp"
            app:cornerRadius="16dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- How It Works Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/help_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/how_it_works"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/instructions_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/instructions"
                    android:textSize="15sp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:contentDescription="@string/instructions_desc" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stop / Danger action -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/stop_service_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/stop_app"
            android:textSize="15sp"
            android:contentDescription="@string/stop_app_desc"
            android:minHeight="52dp"
            app:cornerRadius="12dp"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            style="@style/Widget.Material3.Button" />

        <!-- Version Info -->
        <TextView
            android:id="@+id/version_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.0.4"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
